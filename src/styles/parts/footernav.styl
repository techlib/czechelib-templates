.footernav
	position relative
	z-index 50
	background-color #363636
	padding 50px 0
	color #fff
	&-title
		margin-bottom 15px
	&-list
		margin-bottom 30px
		font-weight 300
		&:last-child
			margin-bottom 0
		a
			display block
			margin-bottom 5px
			color #fff
	&-social
		font-size 20px
		svg
			margin-left 5px
			relative bottom 2px

	@media $1000
		&-list
			a:hover
				color #fff
				text-decoration underline
