.timelinebox
	&-list
		margin 50px auto 0
		max-width 800px
		position relative
		overflow hidden
		&:before
			content ''
			absolute left 50% top 15px bottom
			width 1px
			background-color #fff
	&-item
		max-width 370px
		margin-bottom 30px
		position relative
		&:before
			content ''
			size 20px
			background-color $c-primary
			border-radius 50%
			border 2px solid #fff
			absolute left 100% top
			transform translate(31px, 10px)
		&-date
			color #ffbcb8
			font-size 15px
			font-family $f-medium
		&:nth-child(odd)
			float left
			clear right
			text-align right
		&:nth-child(even)
			float right
			clear left
			&:before
				left auto
				right 100%
				transform translate(-19px, 10px)
		&:last-child
			margin-bottom 0
			&:after
				content ''
				background-color $c-primary
				absolute left -40px top 30px bottom
				width 20px
		&:last-child:nth-child(odd):after
			left auto
			right -50px
