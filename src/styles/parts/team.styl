.team
	&-group
		margin 50px 0
	&-list
		margin-top 30px
		font-size 0
	&-item
		position relative
		margin-bottom 40px
		font-size 15px
		&-img
			position relative
			img
				width 100%
				max-width 100%
			svg
			&:before
				opacity 0
				transition .3s ease all
			svg
				absolute-center()
			&:before
				content ''
				absolute-fill()
				background-color $c-primary
		&-in
			padding 10px 0
		h4
		p
			margin 0

	@media $768
		&-item
			display inline-block
			vertical-align top
			width calc((100%/3) - 20px)
			margin-right 20px
