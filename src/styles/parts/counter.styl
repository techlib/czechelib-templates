.counter
	color $c-text-alt
	&-claim
		font-family $f-bold
		padding-bottom 10px
		font-size 12px
	&-list
		background-color $c-primary-light
		border 2px solid #fff
		border-radius 5px
		size 200px 65px
		margin auto
		font-size 0
		position relative
		&:before
		&:after
			content ''
			size 9px 20px
			background-color $c-primary-light
			border 2px solid #fff
			border-radius 10px
			absolute top -12px
		&:before
			left 10px
		&:after
			right 10px
	&-td
		margin-top 8px
		display inline-block
		vertical-align top
		height 46px
		line-height 1
		width (100% / 3)
		font-size $f-base-size
		padding-top 3px
		&:nth-child(2)
			border-left 1px solid #fff
			border-right 1px solid #fff
		div
			font-size 23px
			font-family $f-bold
		span
			font-family $f-thin
			font-size 12px

	@media $768
		&-claim
			font-size 18px
		&-list
			size 300px 100px
			border-radius 10px
			border 4px solid #fff
			&:before
			&:after
				border 4px solid #fff
				size 17px 33px
				border-radius 10px
				absolute top -19px
			&:before
				left 20px
			&:after
				right 20px
		&-td
			margin-top 11px
			height 71px
			padding-top 8px
			div
				font-size 36px
			span
				font-size 18px
