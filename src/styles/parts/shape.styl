.shape
	display inline-block
	vertical-align middle
	line-height inherit
	fill currentColor

	&-defs
		visibility hidden
		position absolute
		width 0
		height 0
		overflow hidden

	// Shapes default dimensions
	&-facebook
		size 14px 25px
		&.view-large
			size 21px 38px
	&-instagram
		size 26px
		&.view-large
			size 38px
	&-arrow-down
		size 30px 17px
	&-circlearrow
		size 72px 76px
	&-calendar
		size 52px
	&-map
		size 74px 52px
	&-kids
		size 65px 54px
