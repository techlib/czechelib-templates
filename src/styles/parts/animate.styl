.animate
	@media $1000
		&-item
			&:nth-child(2)
				transition-delay .1s
			&:nth-child(3)
				transition-delay .2s
			&:nth-child(4)
				transition-delay .3s
			&:nth-child(5)
				transition-delay .4s
			&:nth-child(6)
				transition-delay .5s
		&-2row
			&:nth-child(even)
				transition-delay .2s
		&-fall
			opacity 0
			transform translate(0, -15px)
			transition .5s ease all
			&.is-visible
			.is-visible &
				transform translate(0)
				opacity 1
		&-pop
			opacity 0
			transform scale(1.2)
			transition .5s ease all
			&.is-visible
			.is-visible &
				transform scale(1)
				opacity 1
		&-fade
			opacity 0
			transition .3s ease all
			&.is-visible
			.is-visible &
				opacity 1
