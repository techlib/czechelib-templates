//
// Wells
// --------------------------------------------------


// Base class
.well
	min-height 20px
	padding 19px
	margin-bottom 20px
	background-color $well-bg
	// border 1px solid $well-border
	// border-radius $border-radius-base
	// box-shadow inset 0 1px 1px rgba(0, 0, 0, .05)

	blockquote
		border-color #ddd
		border-color rgba(0, 0, 0, .15)

	// Sizes
	&-lg
		padding 24px
		// border-radius $border-radius-large
	&-sm
		padding 9px
		border-radius $border-radius-small
	&-dark
		background-color rgba(#000, .6)
		color #fff
		border none
		@media (max-width $screen-sm-min)
			h2
				font-size 27px
	&-auto
		display inline-block
		max-width 500px
	&-primary
		background-color $brand-primary
		color #fff
		border none
		padding 50px 0 25px

	&-linksbar
		background-color rgba($brand-primary, .95)
		border none
		margin 0
		padding 15px 0
		text-align center
		.col-sm-4
			position relative
			&:after
				content ''
				absolute right top -25px bottom -25px
				width 2px
				background-color #fff
				opacity .2
				border-left 1px solid rgba(#000, .8)
			&:last-child:after
				display none
		@media (max-width $screen-sm-min)
			.col-sm-4
				padding-top 5px
				padding-bottom 5px
		@media (min-width $screen-sm-min)
			padding 25px 0
			background-color rgba($brand-primary, .8)
		&-btn
			font-size 18px
			font-weight 300
			svg
				margin-right 20px
				relative bottom 2px
				opacity .5
